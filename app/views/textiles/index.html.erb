<div class="body">
  <div class="container">
    <div>
      <h2 class="textile__index__title">Textiles</h2>
    </div>
    <div class="row sampleRow">
      <% @textiles.each do |textile|%>
      <div class="col-md-12"style="width: 310px; padding: 10px; margin: 20px;">
        <div class = "box1" >
          <% if textile.image? %>
			      <%#= image_tag textile.image.url, size: "280x280" %>
            <%= image_tag photo.image.to_s, size: "280x280"%>
		　     <% end %>
        </div>
        <div><h4><%= textile.title %></h4></div>
        <div class="textile__btn"><%= link_to "詳細", textile_path(textile), class: "btn btn-success"  %></div>
      </div>
      <% end %>
    </div>
    <%= paginate @textiles %>
  </div>
</div>


