<style>
.sampleRow > div {
  min-height: 6em;
  border : dashed 4px #dfefff;
  margin: 0 auto;
}
h2 {
  background: #dfefff;
  box-shadow: 0px 0px 0px 5px #dfefff;
  border: dashed 2px white;
  padding: 0.2em 0.5em;
  width: 140px;
}
</style>
<div class="body">
  <div class="container">
    <div>
      <div style="float: right;" >
        <%= form_tag(search_path, :method => 'get') do %>
            <%= select_tag 'option', options_for_select({shop: 1, sub_material: 2,textile: 3, history: 4},1), include_blank: true%>
            <%= text_field_tag :search %>
          <%= submit_tag 'Search', :name => nil %>
        <% end %>
      </div>
      <h2>Textiles</h2>
    </div>
    <div class="row sampleRow">
      <%= @textiles.each do |textile|%>
      <div class="col-md-12"  style="width: 310px; padding: 10px; margin: 20px;">
        <div class = "box1" >
          <% if textile.image? %>
			      <%= image_tag textile.image.url, size: "280x280" %>
		　     <% end %>
        </div>
        <div><span style="margin-right: 20px;font-size: 24px;">textile</span>  <%= textile.title %></div>
        <div><%= textile.body %></div>
        <div><%= link_to "詳細", textile_path(textile) %></div>
      </div>
      <% end %>
    </div>
    <%= paginate @textiles %>
  </div>
</div>


