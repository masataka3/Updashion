<style>
.sampleRow > div {
  min-height: 6em;
  border : dashed 4px #dfefff;
  margin: 0 auto;
}
h2 {
  background: #dfefff;
  box-shadow: 0px 0px 0px 5px #dfefff;
  border: dashed 2px white;
  padding: 0.2em 0.5em;
  width: 140px;
}
</style>
<div class="body">
  <div class="container">
    <div>
      <h2>Textiles</h2>
    </div>
    <div class="row sampleRow">
      <% @textiles.each do |textile|%>
      <div class="col-md-12"  style="width: 310px; padding: 10px; margin: 20px;">
        <div class = "box1" >
          <% if textile.image? %>
			      <%= image_tag textile.image.url, size: "280x280" %>
		　     <% end %>
        </div>
        <div><h4><%= textile.title %></h4></div>
        <div style="text-align: center"><%= link_to "詳細", textile_path(textile), class: "btn btn-success"  %></div>
      </div>
      <% end %>
    </div>
    <%= paginate @textiles %>
  </div>
</div>


