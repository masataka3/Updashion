<div class='col-xs-3'>
  <h2 style="text-align: center;">User info</h2>
  <table class='table'style ="word-wrap: break-word;table-layout: fixed;">
    <tr>
      <th style=" border: 0px none;"><%= attachment_image_tag(user, :profile_image, fallback: "5.png", size: "200x200") %></th>
    </tr>
    <tr>
      <th >name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>profile</th>
      <td><%= user.profile %></td>
    </tr>
    </tr>
     <th>follows</th>
    <th><%= link_to user.follower.count, user_follows_path(user) %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= link_to user.followed.count, user_followers_path(user) %></th>
    </tr>
  </table>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
    <% end %>
  <% end %>
  <% if user == current_user %>
    <div class='row'>
      <%= link_to '',edit_user_path(user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
    </div>
  <% end %>
</div>