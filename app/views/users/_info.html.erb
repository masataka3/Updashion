<table width=”150″ style="margin-bottom: 30px;">
    <tr>
      <th style=" border: none; "><%= attachment_image_tag(user, :profile_image, fallback: "icon.png", size: "200x200",class: "img-circle pull-left profile-thumb") %></th>
    </tr>
    <tr>
      <th width=”30”> name</th>
      <th width=”30”><%= user.name %></td>
    </tr>
    <tr>
      <th width=”30”>profile</th>
      <td width=”30”><%= user.profile %></td>
    </tr>
    </tr>
     <th width=”30”>follows</th>
     <th width=”30”><%= link_to user.follower.count, user_follows_path(user) %></th>
    </tr>
    <tr>
      <th width=”30”>followers</th>
      <th width=”30”><%= link_to user.followed.count, user_followers_path(user) %></th>
    </tr>
  </table>
  <% if current_user != user %>
    <% if current_user.following?(@user) %>
    <span id="follow_form">
      <%= render '/articles/unfollow', user: @user %>
    <% else %>
      <%= render '/articles/follow', user: @user %>
      <% end %>
    <% end %>
  </span>
  <% if user == current_user %>
      <%= link_to 'プロフィールを変更する',edit_user_path(user),class: "btn btn-default  glyphicon glyphicon-wrench edit_user_#{user.id}" %>
  <% end %>


