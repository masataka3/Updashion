<div class="body">
  <div class="container">
    <div class='row'>
      <%= render 'info', user: @user,now: ''%>
        <div class='col-md-9'>
          <div class="center-block">
            <h2>投稿一覧</h2>
            <div class="columns is-multiline">
            <% @user.articles.each do |article| %>
              <div class="column is-4">
                <div class="card">
                  <div class="card-image" style="margin-left:100px;">
                    <%= link_to article_path(article) do %>
                        <%= attachment_image_tag article, :image, fallback: "5.png",size: "300x300"%>
                    <% end %>
                  </div>
                  <div class="card-content">
                      <div class="content">
                        <%= link_to article_path(article), class: "panel-block" do %>
                          <span class="panel-icon">
                            <i class="fas fa-book" aria-hidden="true"></i>
                          </span>
                          この作り方を見る
                        <% end %>
                        <% if @user.id == current_user.id %>
                            <%= link_to edit_article_path(article), class: "panel-block" do %>
                            <span class="panel-icon">
                              <i class="fas fa-edit"></i>
                            </span>
                            この作り方を編集する
                          <% end %>
                          <%= link_to article_path(article), method: :delete, data: {confirm: "削除しますか？"}, class: "panel-block" do %>
                            <span class="panel-icon">
                              <i class="fas fa-trash"></i>
                            </span>
                            この作り方を削除する
                          <% end %>
                        <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <h2>お気に入り記事</h2>
            <div style="column-count: 3;">
            <% @user.bookmark_articles.each do |article| %>
              <div>
                <%= article.title %>
              </div>
              <div>
                <%= attachment_image_tag article, :image, fallback: "5.png",size: "100x100"%>
              </div>
              <div>
                <%= link_to "詳細" ,article_path(article)%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>