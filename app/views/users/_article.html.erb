<div class="row sampleRow">
  <div class="user__box">
  <% user.articles.each do |article| %>
    <div class=" user__article column is-3">
        <div class="user__image">
          <%= link_to article_path(article) do %>
            <%= attachment_image_tag article, :image, fallback: "icon.png",size: "220x220"%>
          <% end %>
        </div>
        <div>
          <h4><%= article.title%></h4>
        </div>
          <%= link_to article_path(article)do %>
              <i class="fas fa-book fa-2x" aria-hidden="true"></i>
          <% end %>
          <% if @user.id == current_user.id %>
            <%= link_to edit_article_path(article) do %>
                <i class="fas fa-edit fa-2x"></i>
          <% end %>
          <%= link_to article_path(article), method: :delete, data: {confirm: "削除しますか？"} do %>
                 <i class="fas fa-trash fa-2x"></i>
          <% end %>
          <% end %>
      </div>
  <% end %>
  </div>
</div>