<style>
 h2 {
  background: #dfefff;
  box-shadow: 0px 0px 0px 5px #dfefff;
  border: dashed 2px white;
  padding: 0.2em 0.5em;
  width: 160px;
  margin: 30px auto;
}
</style>


<%= flash[:error] %>
<div class="body">
  <div class ="container">
    <div class =row>
     <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div style="text-align: center;margin-bottom: 30px;">
          <div class="field"style="text-align: center;margin-bottom: 30px;">
            <%= f.label :ニックネーム %><br />
            <%= f.text_field :name, autofocus: true,size:50, class: "name" %>
          </div>
          <div class="field"style="text-align: center;margin-bottom: 30px;">
                  <%= f.label :メールアドレス %><br />
                  <%= f.email_field :email, size:50, class: "email" %>
          </div>
          <div class="field"style="text-align: center;margin-bottom: 30px;">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "off", size:50,class: "password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field"style="text-align: center;margin-bottom: 30px;">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions" style ="margin :10px; text-align: center;">
            <%= f.submit "ログイン" ,class: 'btn btn-primary'%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
        <div style="text-align: center;margin-top: 30px;">会員登録がまだお済みでない方は、<%= link_to "こちら", new_user_registration_path %> から新規登録を行ってください
        </div>
    </div>
  </div>
</div>