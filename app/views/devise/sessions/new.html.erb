<%= flash[:error] %>
<div class="body">
  <div class ="container">
    <div class ="row">
     <h2 class="login__title">ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field__device__new">
          <div class="field__device__new">
            <%= f.label :ニックネーム %><br />
            <%= f.text_field :name, autofocus: true,size:50, class: "name" %>
          </div>
          <div class="field__device__new">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, size:50, class: "email" %>
          </div>
          <div class="field__device__new">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "off", size:50,class: "password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field__device__new">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="device__new">
            <%= f.submit "ログイン" ,class: 'btn btn-primary'%>
          </div>
        <% end %>
      </div>
        <div class="device__new">会員登録がまだお済みでない方は、<%= link_to "こちら", new_user_registration_path %> から新規登録を行ってください
        </div>
    </div>
  </div>
</div>