<div class ="container">
  <div class =row>
    <div style="text-align: center;margin-bottom: 30px;">会員登録がまだお済みでない方は、<%= link_to "こちら", new_user_registration_path %> から新規登録を行ってください.</div>>
   <h2 style="text-align: center;margin-bottom: 30px;">ログイン</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div style="text-align: center;margin-bottom: 30px;">
  <div class="field"style="text-align: center;margin-bottom: 30px;">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true,size:50, class: "name" %>
  </div>
  <div class="field"style="text-align: center;margin-bottom: 30px;">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, size:50, class: "email" %>
        </div>
  <div class="field"style="text-align: center;margin-bottom: 30px;">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off", size:50,class: "password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field"style="text-align: center;margin-bottom: 30px;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン" ,class: 'btn btn-primary'%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>