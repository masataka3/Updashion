	    <%= link_to "お気に入りを外す", article_bookmarks_path(article.id), method: :post, id: :"js-bookmark-button-for-article-#{article.id}" %>
	  </div>
<% else %>
    <div style='display: inline; float: right;'>
	    <%= link_to "お気に入り", article_bookmarks_path(article.id), method: :post, id: :"js-bookmark-button-for-article-#{article.id}" %>
	  </div>
<% end %>