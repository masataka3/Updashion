	    <%= link_to "", article_bookmarks_path(article.id), method: :post, id: :"js-bookmark-button-for-article-#{article.id}" , class: "glyphicon glyphicon-bookmark"%>
	  </div>
<% else %>
    <div style='display: inline; float: right;'>
	    <%= link_to "", article_bookmarks_path(article.id), method: :post, id: :"js-bookmark-button-for-article-#{article.id}" , class: "glyphicon glyphicon-bookmark"%>
	  </div>
<% end %>