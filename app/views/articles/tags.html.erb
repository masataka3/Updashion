<div class="body">
  <div class="container">
    <div>
    <h2 class="tag__index__title">Tag 一覧</h2>
    </div>
      <div class="row sampleRow">
      <% @articles.each do |article|%>
      <div class="col-md-12" style="width: 310px; padding: 10px; margin: 20px;">
      	<div class="box1">
			<%= attachment_image_tag article, :image ,size:'280x280',fallback: "icon.png"%>
		</div>
        <div><h4><%= article.title %></h4></div>
         <%= link_to article_path(article), class: "panel-block" do %>
            <div class="panel-icon">
              <i class="fas fa-book" aria-hidden="true">この作り方を見る</i>
            </div>
            <% end %>
        <% article.tag_list.each do |tag| %>
        <span class="hash-tag">
         ＃<%= link_to "#{tag}", tags_articles_path(tag_name: tag) %>
     	</span>
     	<% end %>
          <div class="article__time"><%= article.updated_at.strftime("%Y-%m-%d %H:%M") %></div>
      </div>
    <% end %>
    </div>
  </div>
</div>


