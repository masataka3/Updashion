<style>
.sampleRow > div {
  min-height: 6em;
  border : dashed 4px #dfefff;
  margin: 0 auto;
}
.hover {
  border-radius: 50%;
  transition: all 0.6s ease 0s;
}
.hover:hover {
  cursor: pointer;
  transform: scale(1.1, 1.1);
}
h2 {
  background: #dfefff;
  box-shadow: 0px 0px 0px 5px #dfefff;
  border: dashed 2px white;
  padding: 0.2em 0.5em;
  width: 160px;
}
</style>

<div class="body">
  <div class="container">
    <h2>投稿一覧</h2>
    <div class="row sampleRow">
      <% @articles.each do |article| %>
      <div class="col-md-12"  style="width: 340px; padding: 20px; margin: 20px;">
        <div >
          <%= link_to article_path(article) do %>
            <%= attachment_image_tag article, :image, fallback: "icon.png",size: "280x280",class: "hover"%>
          <% end %>
        </div>
        <div style ="margin-top:40px"><h4><%= article.title %></h4></div>
          <%= link_to article_path(article), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-book" aria-hidden="true"></i>
            </span>この作り方を見る
          <% end %>
          <div><% article.tag_list.each do |tag| %>
            <span class="hash-tag">
              ＃<%= link_to "#{tag}", tags_articles_path(tag_name: tag) %>
            </span>
            <% end %>
          </div>
        <time><%= article.updated_at.strftime("%Y-%m-%d %H:%M") %>更新</time>
      </div>
      <% end %>
    </div>
    <%= paginate @articles %>
  </div>
</div>
