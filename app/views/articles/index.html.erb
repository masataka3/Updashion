<style>
  .container-article {
  margin: 0 auto;
  padding: 5px;
  width: 90%;
  column-count: 3;
  column-gap: 0;
}
</style>

<div class="body">
  <div class="container-article">
    <div class='row'>
          <div style="border : 1px;">
          <section class="section">
           <div>
            <% @articles.each do |article| %>
               <div>
                <%= link_to article_path(article) do %>
                  <%= attachment_image_tag article, :image, fallback: "5.png",size: "200x200"%>
                <% end %>
                </div>
               <div class="noborder">
                <%= link_to article_path(article), class: "panel-block" do %>
                  <span class="panel-icon">
                    <i class="fas fa-book" aria-hidden="true"></i>
                  </span>この作り方を見る
                <% end %>
              </div>
             <div class="noborder"><%= article.title %></div>
               <div class="noborder"><time><%= article.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新</div>
             <% end %>
          </section>
        </div>
    </div>
  </div>
</div>
