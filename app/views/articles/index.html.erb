<div class="body">
  <div class="container">
    <h2 class="article__index__title">投稿一覧</h2>
    <div class="row sampleRow">
      <% @articles.each do |article| %>
      <div class="col-md-12 article__index">
        <div>
          <%= link_to article_path(article) do %>
            <%= attachment_image_tag article, :image, fallback: "icon.png",size: "280x280",class: "hover"%>
          <% end %>
        </div>
        <div class="article__index__text"><h4><%= article.title %></h4></div>
          <%= link_to article_path(article), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-book" aria-hidden="true"></i>
            </span>この作り方を見る
          <% end %>
          <div><% article.tag_list.each do |tag| %>
            <span class="hash-tag">
              ＃<%= link_to "#{tag}", tags_articles_path(tag_name: tag) %>
            </span>
            <% end %>
          </div>
        <div class="article__time"><%= article.updated_at.strftime("%Y-%m-%d %H:%M") %></div>
      </div>
      <% end %>
    </div>
    <%= paginate @articles %>
  </div>
</div>
