<div class="body">
  <% if @article.errors.any? %>
  <div class="alert alert-warning">
     <ul>error
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>
  </div>
  <% end %>

  <div class="container">
    <div class="col-xs-3 ">
      <div style="display: inline-block;">
          <span >
            <%= attachment_image_tag @user, :profile_image ,size:'32x32',fallback: "5.png" , class: "img-circle pull-left profile-thumb"%>
          </span>

          <span style="display: inline-block;margin-bottom: 30px">
            <%=link_to user_path(@user) do %>
            <%= @user.name %>さん
            <% end %>:
            <% if current_user != @user %>
              <% if current_user.following?(@user) %>
              <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
              <% end %>
            <% end %>
          </span>
      </div>

      <div style="display: inline-block;">
        <div >
          <%= attachment_image_tag @article, :image ,size:'300x300',fallback: "5.png"%>
        </div>
      </div>
      <div>
        <span class="article_<%= @article.id %>">
          <%= render 'like', article: @article %>
        </span>
          <%= render 'bookmark', article: @article %>
          <% if @article.user.id == current_user.id %>
            <div style="display: inline-block;"> <%= link_to "編集画面へ", edit_article_path(@article), class: 'btn-sm btn-primary' %></div>
            <div style="display: inline-block;"><%= link_to "Destroy", article_path(@article.id), method: :delete, "data-confirm"=> "本当に削除してもよろしいですか？", class: "btn-sm btn-danger"%></div>
          <% end %>
        </div>
        <div class="field">
          <%= form_with model: [@article, @comment], data: {remote: true} do |f| %>
            <%= f.text_area :comment,autofocus: true %>
            <div style="text-align: right;"><%= f.submit "送信する", class: 'btn btn-success ' %></div>
          <% end %>
        </div>

        <h2>コメント一覧</h2>
        <div class="show-tb comment_<%= @article.id %>" style="margin:20px;">
            <%= render 'comment_area', comments: @article.comments %>
        </div>

        </div>
      <div class="col-xs-9 ">
        <div class="columns is-centered"style="display: inline-block;margin-left:150px;">
        <h3 class="title is-4">『<%= @article.title %>』</h3>
        <div class="content" style="margin-top:30px;">
          <div><%= simple_format @article.body %></div>
        </div>
          <% @article.tag_list.each do |article| %>
            <span style="background-color: #dfefff; border-radius: 5px;">＃<%= article %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>


<style>
  textarea {
  width:254px;
  height:80px;
}
</style>