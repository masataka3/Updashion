<style>
  li {
  display: inline-block;
}

</style>

<div class="body">
  <div class="flash">
  	<%= flash[:notice] %>
  </div>
  <% if @article.errors.any? %>
    <div class="alert alert-warning">
       <ul>error
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>


  <div class ="container">
    <div class="row">
    <div class='col-md-9'>
      <table class ="table">
        <tr>
          <td valign="middle"><%= attachment_image_tag @article, :image, size:'200x200',fallback: "5.jpg"%>
          </td>
        </tr>
        <tr>
          <td><%= link_to(@article.user) do %>
          <%= @article.user.name %>
          <% end %>
          </td>
        </tr>
        <tr>
          <td valign="middle"><%=@article.title%></td>
        </tr>
        <tr>
          <td valign="middle"><%= @article.body %></td>
        </tr>
        <tr>
          <td>
            <ul style ="list-style-type: none; display: inline-block; ">
              <% if @article.user_id == current_user.id %>
                <li><%= link_to "Edit", edit_article_path(@article.id), class: "btn-sm btn-success" %></li>
                <li> <%= link_to "Destroy", article_path(@article.id), method: :delete, "data-confirm"=> "本当に削除してもよろしいですか？", class: "btn-sm btn-danger"%></li>
                <% end %>
              <% if @article.favorited_by?(current_user) %>
                <li>
                  <%= link_to article_favorites_path(@article), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @article.favorites.count %> いいね
            <% end %>
              </li>
            <% else %>
              <li>
              <%= link_to article_favorites_path(@article), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= @article.favorites.count %> いいね
              <% end %>
              </li>
            <% end %>
            </ul>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
