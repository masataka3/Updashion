<% if article.favorited_by?(current_user) %>
  <div style="display: inline-block;">
    <%= link_to article_favorites_path(article, redirect_id: 0), method: :delete, remote: true do %>
    <i class="fa fa-heart fa-lg" aria-hidden="true" style="color: red; "></i>
      <%= article.favorites.count %>
    <% end %>
  </div>
<% else %>
  <div style="display: inline-block;">
    <%= link_to article_favorites_path(article, redirect_id: 0), method: :post, remote: true do %>
      <i class="fa fa-heart-o fa-lg" aria-hidden="true"></i>
    <% end %>
  </div>
<% end %>
