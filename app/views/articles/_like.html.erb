<div id="like-<%= article.id %>">
  <div style="display: inline-block;">
    <% if article.favorited_by?(current_user) %>
      <%= link_to article_favorites_path(article), method: :delete, remote: true do%>
      <i class="fa fa-heart" id="<%= article.id %>" aria-hidden="true" style="color: red;"></i>
        <%= article.favorites.count %>
      <% end %>
    </div>
    <% else %>
    <div style="display: inline-block;">
      <%= link_to article_favorites_path(article), method: :post , remote: true do %>
      <i class="fa fa-heart-o" id="<%= article.id %>" aria-hidden="true"></i>
    <% end %>
  <% end %>
  </div>
</div>