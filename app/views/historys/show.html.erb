<div class="body">
  <div class="container">
    <h2 class="history__show__title">History詳細</h2>
    <div class="row">
      <div class="col-xs-3">
        <div>
           <%= image_tag @history.image.url, size: "300x300"%>
        </div>
      </div>
      <div class="col-xs-9">
        <div class="columns is-centered"style="display: inline-block;margin-left:60px;">
          <div class="content">
            <h3><%= @history.title %></h3>
          <div><%= simple_format @history.body %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <span id="back">
      <a href="#">
        <%= image_tag asset_path("arrow.png")%>
      </a>
    </span>
</div>

