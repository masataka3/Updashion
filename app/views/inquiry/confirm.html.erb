<div class ="container">
  <div class = "row">
    <div class="page-header">
      <h2 class="inquity__title">お問い合わせ</h2>
    </div>
    <div class="inquiry__box">
    <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @inquiry.name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @inquiry.email %>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :message %>
            <%= simple_format(@inquiry.message) %>
          </td>
        </tr>
      </table>
    </div>
      <%= f.submit '送信', :class => 'btn btn-primary' %>
      <%= link_to "戻る", inquiry_index_path %>
    <% end %>
  </div>
</div>